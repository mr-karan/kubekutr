---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: {{.Name}}
spec:
  selector:
    matchLabels:
      {{- range .Labels}}
      {{.Name}}
      {{- end}}
  serviceName: {{.ServiceName}}
  template:
    metadata:
      labels:
        {{- range .Labels}}
        {{.Name}}
        {{- end}}
    spec:
      containers:
      {{- range .Containers}}
      - image: {{.Image}}
        name: {{.Name}}
        {{- if .Command}}
        command: {{.Command}}
        {{- end}}
        {{- if .Args}}
        args: {{.Args}}
        {{- end}}
        {{- if .PortInt}}
        ports:
        - containerPort: {{.PortInt}}
          name: {{.PortName}}
        {{- end}}
        {{- if .EnvVars}}
        env:
        {{- range .EnvVars}}
        - name: {{.Name}}
          value: {{.Value}}
        {{- end}}
        {{- end}}
        {{- if .EnvSecret}}
        envFrom:
        - secretRef:
            name: {{.EnvSecret}}
        {{- end}}
        {{- if .VolumeMounts}}
        volumeMounts:
        {{- range .VolumeMounts}}
        - mountPath: {{.MountPath}}
          name: {{.Name}}
          {{- if .SubPath}}
          subPath: {{.SubPath}}
          {{- end}}
        {{- end}}
        {{- end}}
      {{- end}}
      {{- if .Volumes}}
      volumes:
        {{- range .Volumes}}
        - name: {{.Name}}
        {{- end}}
      {{- end}}

